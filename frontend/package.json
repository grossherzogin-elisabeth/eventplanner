{
    "name": "eventplanner-frontend",
    "private": true,
    "version": "1.2.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "preview": "vite preview",
        "build": "vue-tsc --noEmit -p tsconfig.app.json --composite false && vite build",
        "lint": "npx eslint --fix src",
        "format": "./node_modules/.bin/prettier . --ignore-path .gitignore --ignore-path .prettierignore --write",
        "test": "TZ=CET vitest",
        "test:coverage": "TZ=CET vitest run --coverage",
        "check:format": "./node_modules/.bin/prettier --ignore-path .gitignore --ignore-path .prettierignore --check .",
        "check:lint": "npx eslint src",
        "check:typescript": "vue-tsc"
    },
    "dependencies": {
        "@fortawesome/fontawesome-free": "^7.1.0",
        "feiertagejs": "^1.4.1",
        "i18n-iso-countries": "^7.14.0",
        "i18n-nationality": "^1.4.0",
        "markdown-it": "^14.1.0",
        "svg-country-flags": "^1.2.10",
        "uuid": "^13.0.0",
        "vue-draggable-next": "^2.3.0",
        "vue-i18n": "^11.1.12",
        "vue-router": "^4.6.3",
        "vuedraggable": "^4.1.0"
    },
    "devDependencies": {
        "@babel/core": "^7.28.5",
        "@babel/preset-env": "^7.28.5",
        "@babel/preset-typescript": "^7.28.5",
        "@material/material-color-utilities": "^0.3.0",
        "@modyfi/vite-plugin-yaml": "^1.1.1",
        "@tailwindcss/postcss": "^4.1.17",
        "@trivago/prettier-plugin-sort-imports": "^5.2.2",
        "@types/markdown-it": "^14.1.2",
        "@types/node": "^24.10.0",
        "@types/uuid": "^11.0.0",
        "@vitejs/plugin-vue": "^6.0.1",
        "@vitest/coverage-v8": "^4.0.4",
        "@vue/eslint-config-typescript": "^14.6.0",
        "@vue/test-utils": "^2.4.6",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-vue": "^10.5.1",
        "happy-dom": "^20.0.8",
        "postcss": "^8.5.6",
        "prettier": "^3.6.2",
        "prettier-plugin-tailwindcss": "^0.7.1",
        "tailwindcss": "^4.1.16",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.46.3",
        "vite": "^7.2.2",
        "vite-plugin-pwa": "^1.1.0",
        "vite-svg-loader": "^5.1.0",
        "vitest": "^4.0.8",
        "vue": "^3.5.24",
        "vue-tsc": "^3.1.3"
    }
