{
    "name": "eventplanner-frontend",
    "private": true,
    "version": "0.1.3",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "compile": "vue-tsc --noEmit -p tsconfig.app.json --composite false",
        "build": "npm run compile && vite build",
        "preview": "vite preview",
        "lint": "npx eslint --fix src",
        "format": "./node_modules/.bin/prettier . --ignore-path .gitignore --write",
        "check:fix": "npm run format && npm run lint && npm run compile",
        "check:format": "./node_modules/.bin/prettier --ignore-path .gitignore --check .",
        "check:lint": "npx eslint src",
        "check:typescript": "vue-tsc"
    },
    "dependencies": {
        "@fortawesome/fontawesome-free": "^6.7.1",
        "feiertagejs": "^1.4.1",
        "i18n-iso-countries": "^7.13.0",
        "i18n-nationality": "^1.4.0",
        "markdown-it": "^14.1.0",
        "svg-country-flags": "^1.2.10",
        "uuid": "^10.0.0",
        "vue": "^3.5.13",
        "vue-draggable-next": "^2.2.1",
        "vue-i18n": "^9.14.2",
        "vue-router": "^4.5.0",
        "vuedraggable": "^4.1.0",
        "vuejs3-datepicker": "^1.1.3"
    },
    "devDependencies": {
        "@babel/core": "^7.26.0",
        "@babel/preset-env": "^7.26.0",
        "@babel/preset-typescript": "^7.26.0",
        "@material/material-color-utilities": "^0.3.0",
        "@trivago/prettier-plugin-sort-imports": "^4.3.0",
        "@types/markdown-it": "^14.1.2",
        "@types/node": "^22.8.1",
        "@types/uuid": "^10.0.0",
        "@vitejs/plugin-vue": "^5.0.4",
        "@volar/language-server": "2.4.8",
        "@vue/eslint-config-typescript": "^14.1.3",
        "@vue/language-server": "2.1.8",
        "autoprefixer": "^10.4.17",
        "eslint": "^9.13.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-vue": "^9.30.0",
        "postcss": "^8.4.35",
        "prettier": "^3.2.5",
        "prettier-plugin-tailwindcss": "^0.5.11",
        "tailwindcss": "^3.4.1",
        "typescript": "^5.4.4",
        "typescript-eslint": "^8.11.0",
        "vite": "^5.4.10",
        "vite-plugin-pwa": "^0.20.1",
        "vite-svg-loader": "^5.1.0",
        "vue-tsc": "^2.1.8"
    }
